{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    "extends": [
        "plugin:react/recommended",
        "eslint:recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 13,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "no-unused-vars": ["warn"],
        "quotes": ["error", "single"],
        "comma-dangle": ["error", "always-multiline"],
        "semi": ["error", "always"]
    },
    "ignorePatterns": ["*.css", "*.svg"],
    "settings": {
        "react": {
            "version": "detect"
        }
    }
}
